[core]
	autocrlf = input
  safecrlf = false
  filemode = false
  ignorecase = false
	excludesfile = /Users/{{ ansible_ssh_user }}/.gitignore
[branch]
  autosetuprebase = always
[diff]
  renames = copies
[color]
  ui = true
[alias]
  a = apply --index
  p = format-patch --stdout
	st = status
	ci = commit -m
	co = checkout
	un = reset --hard HEAD
[push]
	default = simple